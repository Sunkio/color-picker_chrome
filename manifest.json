{
  "name": "Lean Color Picker",
  "description": "A lean, no-fluff color picker for Chrome.",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "./popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./content.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}